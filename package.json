{
  "name": "slides",
  "version": "0.1.0",
  "description": "Sharable slides for everything.",
  "repository": "git@github.com:JounQin/Slides.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "parcel src/index.html --https",
    "lint": "EFF_NO_LINK_RULES=true eslint . --ext mdx,ts,tsx -f friendly",
    "build": "rimraf dist && parcel build src/index.html",
    "type-coverage": "type-coverage --cache --ignore-catch --detail --ignore-files dist --ignore-files *.d.ts --strict"
  },
  "dependencies": {
    "@mdx-js/react": "^1.3.1",
    "classnames": "^2.2.6",
    "prism-react-renderer": "^0.1.7",
    "prismjs": "^1.17.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "reveal.js": "^3.8.0",
    "rxjs": "^6.5.2"
  },
  "devDependencies": {
    "@1stg/eslint-config": "^0.2.2",
    "@1stg/husky-config": "^0.3.1",
    "@1stg/lint-staged": "^0.8.6",
    "@1stg/prettier-config": "^0.4.2",
    "@1stg/tsconfig": "^0.1.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@mdx-js/parcel-plugin-mdx": "^1.3.1",
    "@types/classnames": "^2.2.9",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.0",
    "@welldone-software/why-did-you-render": "^3.3.5",
    "commitlint": "^8.2.0",
    "eslint": "^6.4.0",
    "eslint-formatter-friendly": "^7.0.0",
    "eslint-plugin-mdx": "^1.5.2",
    "husky": "^3.0.5",
    "lint-staged": "^9.3.0",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2",
    "remark-preset-lint-markdown-style-guide": "^2.1.3",
    "remark-preset-lint-recommended": "^3.0.3",
    "sass": "^1.22.12",
    "ts-node": "^8.3.0",
    "tsd": "^0.7.4",
    "type-coverage": "^2.2.0",
    "typescript": "^3.5.3"
  },
  "eslintIgnore": [
    ".cache",
    "dist",
    "node_modules"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": "@1stg/prettier-config",
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      "remark-preset-lint-markdown-style-guide"
    ]
  },
  "renovate": {
    "extends": [
      "@1stg"
    ]
  },
  "typeCoverage": {
    "atLeast": 98
  }
}
